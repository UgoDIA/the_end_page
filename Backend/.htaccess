RewriteEngine On
RewriteBase /

# Rediriger tout vers app.py sauf les fichiers existants
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /app.py/$1 [L]

# Configurations sp√©cifiques pour Python sur cPanel
AddHandler fcgid-script .py
FcgidWrapper "/home/username/public_html/your_app/app.py" .py